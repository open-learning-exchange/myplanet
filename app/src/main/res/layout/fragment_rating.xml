<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center"
    android:foregroundGravity="center"
    android:orientation="vertical"
    android:background="@color/card_bg"
    tools:context=".ui.rating.RatingFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:text="@string/your_rating"
        android:textSize="@dimen/text_size_large"
        android:textColor="@color/hint_color" />
    <androidx.appcompat.widget.AppCompatRatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/padding_normal"
        android:max="5"
        android:stepSize="1"
        android:theme="@style/RatingBar" />
    <TextView
        android:id="@+id/ratingError"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/padding_normal"
        android:visibility="gone"
        android:textColor="@color/colorAccent"
        android:textSize="@dimen/text_size_large" />
    <com.google.android.material.textfield.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/hint_color">

        <EditText
            android:id="@+id/et_comment"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/your_comment"
            android:textColor="@color/daynight_textColor"
            android:backgroundTint="@color/hint_color" />
    </com.google.android.material.textfield.TextInputLayout>

    <LinearLayout
        android:id="@+id/user_status_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:padding="@dimen/padding_normal"
        android:visibility="gone">

        <ProgressBar
            android:id="@+id/user_status_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/user_status_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/padding_small"
            android:layout_weight="1"
            android:text="@string/loading_user_profile"
            android:textColor="@color/daynight_textColor"
            android:textSize="@dimen/text_size_mid" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right">

        <Button
            android:id="@+id/btn_submit"
            style="@style/GreyButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:background="@drawable/buttongrey"
            android:text="@string/button_submit" />
        <ProgressBar
            android:id="@+id/submit_progress"
            style="?android:attr/progressBarStyleSmall"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="10dp"
            android:layout_gravity="center_vertical"
            android:visibility="gone" />
        <Button
            android:id="@+id/btn_cancel"
            style="@style/GreyButtons"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/buttongrey"
            android:text="@string/button_cancel" />
    </LinearLayout>
</LinearLayout>
