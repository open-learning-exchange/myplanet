<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <SwitchPreference
        android:defaultValue="true"
        android:key="show_topbar"
        android:title="@string/show_top_nav" />

    <ListPreference
        android:entries="@array/language"
        android:entryValues="@array/language_keys"
        android:key="app_language"
        android:title="@string/language" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="bell_theme"
        android:title="BeLL Dashboard Theme" />
    <SwitchPreference
        android:defaultValue="false"
        android:key="beta_function"
        android:title="Beta Functionality" />

    <PreferenceCategory android:title="Manager Mode">

        <Preference
            android:key="add_manager"
            android:title="Add Manager Account" />

    </PreferenceCategory>

    <PreferenceCategory
        android:dependency="beta_function"
        android:title="Beta Functionality">
        <SwitchPreference
            android:defaultValue="true"
            android:key="beta_course"
            android:title="Beta Function for Course" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="beta_wifi_switch"
            android:title="Beta Function for WiFi Switch" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="beta_achievement"
            android:title="Beta Function for Achievement" />
        <SwitchPreference
            android:defaultValue="false"
            android:key="beta_survey"
            android:title="Beta Function for Survey" />

        <SwitchPreference
            android:defaultValue="false"
            android:key="beta_rating"
            android:title="Beta Function for Rating" />
    </PreferenceCategory>
</PreferenceScreen>